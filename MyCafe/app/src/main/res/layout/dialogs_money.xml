<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="650px"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFFFBB33"
        android:contentDescription="儲值"
        android:scaleType="center"
        android:src="@drawable/money_dialog" />

    <TextView
        android:id="@+id/textView7"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addvalue_text"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="+ $  "
            android:textSize="35dp" />

        <EditText
            android:id="@+id/money_editText"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:layout_weight="2"
            android:gravity="center"
            android:inputType="numberSigned"
            android:maxLength="5"
            android:textSize="26dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="btn_onClick"
            android:text="@string/addvalue_btn"
            android:textSize="21dp" />
    </LinearLayout>

</LinearLayout>